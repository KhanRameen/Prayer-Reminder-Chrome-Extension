{
  "manifest_version": 3,
  "name": "Prayer Reminder",
  "version": "1.0.0",
  "description": "Testing extention using TS",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "icons/pirate-parrot.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
